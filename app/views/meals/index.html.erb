<p style="color: green"><%= notice %></p>

<h1>Meals</h1>

<div id="meals" style='display:flex'>
  <% @meals.each do |meal| %>
    <div class="card m-2 p-2" ><%= render meal %>
    <p>
      <%= link_to "Show this meal", meal %>
    </p></div>
  <% end %>
</div>

<%= link_to "New meal", new_meal_path, class:"btn btn-primary m-2" %>
